doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')

  body
    div(id="header")
      #img-background
        img(src="/images/book-review-header.jpg" class='header-img')
      div(class='nav-bar')
        a(href="/" class="navLink") Home 
        a(href="/book-reviews" class="navLink") Book Reviews
        div(class="dropDownContainer")
          button#drop-btn Monthly Wrap Ups
          div(id="myDropdown" class="dropdown-content")
            a(href="/monthly-wrap-ups" class='wrap-up-link') All
            a(href="/monthly-wrap-up/2024" class='wrap-up-link') 2024
            a(href="/monthly-wrap-up/2023" class='wrap-up-link') 2023
            a(href="/monthly-wrap-up/2022" class='wrap-up-link') 2022
            a(href="/monthly-wrap-up/2021" class='wrap-up-link') 2021
        a(href="/tbr-list" class="navLink") TBR Masterlist
        a(href="/upcoming-releases" class="navLink") Upcoming Releases
        if user 
          a(href="/dashboard" class="navLink") Dashboard
          a(href="/log-out" class="navLink") Log Out
        else
          a(href="/log-in" class="navLink") Log In
    div(class="center-margin-top")
      block content 

  script(type="application/javascript" src="/javascripts/drop-down.js")