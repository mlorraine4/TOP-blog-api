extends ./shared/navbar-content.pug

block content
    form#wrap-up-form(class="text-2xl p-10 min-w-[400px] max-w-[960px] ")
        div(class="text-5xl mb-5") Add Monthly Wrap Up
        label(for='month') Month
        select#month(class="w-1/3" name='month' type='text' required)
            option(value="January" selected) January
            option(value="February") February
            option(value="March") March 
            option(value="April") April
            option(value="May") May
            option(value="June") June
            option(value="July") July
            option(value="August") August
            option(value="September") September
            option(value="October") October
            option(value="November") November
            option(value="December") December
        label(for='year') Year
        input#year(class="w-1/3" name='year' type='number' value=(undefined===wrapUp ? '' : wrapUp.year))
        input#summary(hidden value=(undefined===wrapUp ? '' : wrapUp.summary))
        p Monthly Summary
        textarea(id="my-expressjs-tinymce-app")         
        button(type='submit' class='p-4 bg-accent hover:bg-accent-faded text-white text-lg m-5') Save
    #message(class="text-xl bold")
    script(type="application/javascript" src="/tinymce/tinymce.min.js")
    script(type="application/javascript" src="/javascripts/monthly-wrap-up-form.js" defer)