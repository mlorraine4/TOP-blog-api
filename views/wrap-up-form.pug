extends layout

block content
    form(action='' method='POST' class="text-2xl p-10 min-w-[400px] max-w-[960px] ")
        div(class="text-5xl mb-5") Add Monthly Wrap Up
        label(for='month') Month
        select#month(class="w-1/3 text-pone" name='month' type='text' required class="text-black")
            option(value="January" selected) January
            option(value="February") February
            option(value="March") March 
            option(value="April") April
            option(value="May") May
            option(value="June") June
            option(value="July") July
            option(value="August") August
            option(value="September") September
            option(value="October") October
            option(value="November") November
            option(value="December") December
        label(for='year') Year
        input#year(class="w-1/3 text-pone" name='year' type='number' value=(undefined===wrapUp ? '' : wrapUp.year))
        label(for='summary') Summary (ex: 4 books, 4 manga)
        input#summary(class="w-2/3 text-pone" name='summary' type='text' value=(undefined===wrapUp ? '' : wrapUp.summary))
        label(for='cover_url') Cover Image Url
        input#cover_url(class="w-2/3 text-pone" name='cover_url' type='text' value=(undefined===wrapUp ? '' : he.decode(wrapUp.cover_url)))               
        button(type='submit' class='p-5 bg-ptwo hover:bg-faded text-white text-lg m-5') Save
    if errors
        each error in errors
            li!= error.msg