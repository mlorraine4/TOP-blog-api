extends ./shared/navbar-content.pug

block content
    #log-(class="m-auto")
        div(class="text-4xl text-center p-5 pt-[60px]") Log In
        
        form(action='' method='POST' class="w-[400px]")
            label(for='username') Username
            input#username(name='username' type='text' required value=(undefined===user ? '' : user.username) class="w-5/6")
            label(for='password') Password
            input#password(name='password' autocomplete="on" type='password' required class="w-5/6")
            button(type='submit' class="p-2 bg-accent hover:bg-accent-faded text-lg m-5") Log In
            
        if errors
            each error in errors
                li!= error.msg