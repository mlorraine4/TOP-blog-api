extends layout

block content
  if user && user.is_admin
    p 
      a(href="/library") My Library 
  div(class='text-2xl font-bold text-center p-5') #{he.decode(book.title)} by #{he.decode(book.author)}
  if book.series && book.series.length !== 0
    div(class='text-xl font-bold text-center p-5') #{he.decode(book.series)} ##{book.series_number}
  div(class='flex flex-wrap')
    div(class='flex flex-col justify-center w-[250px]')
      img(class='h-[225px] w-[150px] shadow-lg' src=he.decode(book.book_cover_url))
      p #{book.rating}/5 stars

  if user && user.is_admin
    p 
      a(href=`${book.url}/update` class='border-rounded') Edit
    p
      a(href=`${book.url}/delete` class='border-rounded') Delete